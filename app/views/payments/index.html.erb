<table class="table table-striped table-hover">
  <blockquote>
    <%= form_tag(report_daily_url, method: :post, remote: true ) do %>
      <%= text_field_tag :from, nil, placeholder: "c #{@from}", class: "form-control input-sm", style: "width:200px"%>
      <%= text_field_tag :to, nil, placeholder: "по #{@to}", class: "form-control input-sm", style: "width:200px" %>
      <%= submit_tag "Обновить", class: "btn btn-success" %>
    <% end %>
  </blockquote>
  <h3>Транзакции:</h3>
  <tr>
    <th>Название организации</th>
    <th>Лицевой счет</th>
    <th>Адрес</th>
    <th>Сумма платежа</th>
    <th>Дата транзакции</th>
    <th>Тип транзакции</th>
  </tr>
  <tbody id="js-transaction">
  <tr>
    <% @payments.each do |report| %>
    <% report = report.split(';') %>
      <td><%= report[5] %></td>
      <td><%= report[1] %></td>
      <td><%= report[2] %></td>
      <td><%= report[3].to_f + report[4].to_f  %></td>
      <td><%= report[7] %></td>
      <td><%= @transactions_type[report[0].to_i] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Скачать", xls_url, class: "btn btn-success" %>