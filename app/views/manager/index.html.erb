<script>
	$(document).ready(function(){
		$("#vendor").autocomplete({
			source: $('#vendors').data('vendors')
		});
	});
</script>
<div class="span9">
	<%= form_tag manager_report_url, method: :post do %>
		<%= select_month(@month) %>
		<%= select_year(@year, :start_year => 2014, :end_year => Time.now.year + 1) %>
		<%= submit_tag "Обновить", id: "file_button" %>
	<% end %>

	<%= form_tag manager_url, multipart: true do %>
		<%= @notice %></br>
		Выгрузки существуют по поставщикам:
		<% @vendors_with_report.each do |v| %>
			<p>
				<%= v.title if !v.nil? %>
			</p>
		<% end %>
		<% if @month == Date.today.month && @year == Date.today.year %>
			<p>
				<%= content_tag "div", id: "vendors", data: {vendors: @vendor_title.to_json} do %>
				<% end %>
				Для добавления новой выгрузки выберите поставщика:
				<%= text_field_tag "vendor" %>
			</p>
			<%= file_field_tag :file %>
			<%= submit_tag "Добавить", id: "file_button" %>
		<% end %>
	<% end %>
	<% if flash[:notice] %>
		<div class="notice">
			<%= notice %>
		</div>
		<% if flash[:notice] == "Формат данной выгрузки не соответствует образцу, предоставленному вами ранее. Просим переделать выгрузки и повторить добавление. Образец можно скачать ниже. По возникшим вопросом Вы можете проконсультироваться по телефонам 373-64-10, 373-64-11." %>
			<div class="link"><%= link_to "Скачать образец", sample_url %></div>
		<% end %>
	<% end %>

</div>

