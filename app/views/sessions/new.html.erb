<body id="login">
<div class="bag">
<div class="login">
	<div class="login-form">
	<%= form_tag login_url, method: :post do %>
		<div class="control-group login-field"><%= text_field_tag :email, nil,  placeholder: "Эл. почта" %></div>
		<div class="control-group login-field"><%= text_field_tag :auth_key, nil,  placeholder: "Ключ" %></div>
 	<div id="button"><%= submit_tag "Войти"%></div>
	<% end %>
	</div>
</div>
</div>
</body>