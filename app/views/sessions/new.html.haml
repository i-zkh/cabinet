%body#login
  .login-form
    = form_tag login_url, method: :post do
      = text_field_tag :email, nil,  placeholder: "Эл. почта", class: "form-control input-sm"
      = text_field_tag :auth_key, nil,  placeholder: "Ключ", class: "form-control input-sm"
      = submit_tag "Войти", class: "btn btn-success"